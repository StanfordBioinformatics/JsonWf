{
	"$schema": "http://json-schema.org/draft-04/schema#",

	"resources": {
		"type": "object",
	 	"properties": { 

				"reference": { "type": "string" },

				"dbsnp": { "type": "string"},
	
				"outdirs": {
						"type": "object"
				},

				"outfiles": {
						"type": "object"
				},

				"qsub": {
						"type": "object"
				}
		}
	},
			
	"analyses": {
		"type": "array",
		"items": {
			"type": "object",
			"additionalProperties": false,

				"required": ["program","id","enable","qsub"],
				"properties": {

					"program": { "type": "string" },	

					"enable": {
						"type": "integer",
						"enum": [0,1]
					},
					
					"dependencies": { 
						"type": "array",
						"items": { "type": "string" }
					},
			
					"modules": { "type": ["string"] },
				
					"jar": { "type": "string" },
	
					"javavm": { "type": "string" },
		
					"qsub": {
						"type": "object",
						"properties": {
					
							"slots": { "type": "integer" },

							"mem": { "type": "integer" },
			
							"mem_ratio": {
								"description": "The ratio of memory in GB to input file size in the format #:arg, where '#' is an integer and 'arg' is one of the arguments in the 'params' object.",
								"type": "string"
							},

							"time": { "type": "string" },
						
							"cwd": { "type": "string" },

							"queue": { "type": "string" },
				
							"project": { "type": "string"},

							"host":  { "type": "string" },
	
							"pe":	{ "type": "string" },
	
							"account": { "type": "string"}
						}
					},
	
					"params": {
						"type": "object"
					},
	
					"args": {
						"description": "An array of command-line arguments.",
						"type": "array"
					}
				}
		}
	}
}
