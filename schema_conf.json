{
	"$schema": "http://json-schema.org/draft-04/schema#",

	"resources" {
		"type": "object",
	 	"properties": { 

				"reference": { "type": "string" },

				"dbsnp": { "type": "string"}
		}
	},
	"programs" {
		"type": "array",
		"items" {
			"type": "object"
			"additionalProperties": false,
			"properties": {

				"required": ["id","status"],
				"properties": {
			
					"id": { "type": "integer" },

					"enable": {
						"type": "integer",
						"enum": [0,1]
					},
			
					"modules": { "type": ["string"] },
				
					"jar": { "type": "string" },
	
					"javavm": { "type": "string" },
		
					"qsub": {
						"type": "object",
						"properties": {

							"slots": { "type": "integer" },

							"mem": { "type": "number" },

							"time": { "type": "string" },
						
							"cwd": { "type": "string" },

							"queue": { "type": "string" },
				
							"project": { "type": "string"},

							"host":  { "type": "string" }
						}
					},
	
					"params": {
						"type": "object"
					}
				}
			}
		}
	}
}
