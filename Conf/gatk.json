

{ 


	"resources": {
		"email": "nathankw@stanford.edu",
		"reference": "/path/to/hg19",
		"dbsnp": "/path/to/dbsnp"
	},
	"programs": {

		"DepthOfCoverage": {
			"enable": 1,
			"modules":["gatk/3.0"],
			"jar": "$GATK/GenomeAnalysisTK.jar",
			"inputFormat": "bam",
			"inputArg": "INPUT",
			"outputArg": "OUTPUT",
			"javavm": "-Xmx2G",
			"qsub": {
				"name": "depthOfCov",
				"slots": 10,
				"mem": "3G",
				"-M": "$email:r",
				"-m": "ba",
				"-A": "test"
			},
			"params": {
				"-T": "DepthOfCoverage",
				"-R": "$reference",
				"-I": "bam",
				"-o": "output.txt"
			}
		}
	}
}
