

{ 

	"resources": {
		"email": "nathankw@stanford.edu",
		"mailWhen": "ba",
		"billing": "clinical-services",
		"reference": "/srv/gs1/projects/scg/Resources/GATK/hg19/ucsc.hg19.fasta",
		"dbsnp": "/path/to/dbsnp",
		"GATK": "/srv/gs1/software/gatk/gatk-3.0/GenomeAnalysisTK-3.0-0/"
	},
	"analyses": {

		"DepthOfCoverage": {
			"enable": 1,
			"modules":["gatk/3.0"],
			"jar": "$GATK/GenomeAnalysisTK.jar",
			"javavm": "-Xmx2G",
			"inputFormat": "bam",
			"inputArg": "INPUT",
			"outputArg": "OUTPUT",

			"qsub": {
				"name": "DepthOfCoverage",
				"slots": 1,
				"mem": "6G",
				"#project": "large_mem",
				"cwd": "/srv/gs1/software/gbsc/clinical_qc",
				"-M": "$email",
				"-m": "$mailWhen",
				"#-A": "$billing"
			},
			"params": {
				"-T": "DepthOfCoverage",
				"-L": "chr20:59998-248123",
				"-R": "$reference",
				"-I": "/srv/gs1/software/gbsc/clinical_qc/TEST/chr20_80K.bam",
				"-o": "coverage_hist.txt"
			}
		},

		"VariantEval": {
			"enable": 1,
			"modules": ["gatk/3.0"],
			"jar": "$GATK/GenomeAnalysisTK.jar",
			"javavm": "-Xmx2G",
			"inputFormat": "vcf",

			"qsub": {
				"name": "VariantEval",
				"slots": 1,
				"mem": "6G",
				"#project": "large_mem",
				"cwd": "/srv/gs1/software/gbsc/clinical_qc",
				"-M": "$email",
				"-m": "$mailWhen",
				"-A": "$billing"
			},

			"params": {
				"-nt": 10,
				"-T": "VariantEval",
				"-L": "chr20:61795-62965366",
				"-R": "$reference",
				"--eval:set1,vcf": "/srv/gs1/software/gbsc/clinical_qc/TEST/chr20.vcf",
				"-o": "variantEval_metrics.txt",
				"-noEV": "",
				"-EV CountVariants -EV TiTvVariantEvaluator": "",
				"-noST": "",
				"-ST": "VariantType"
			}
		}	
	}
}
