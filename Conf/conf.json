{ 

	"resources": {
		"reference": "/srv/gs1/projects/scg/Resources/GATK/hg19/ucsc.hg19.fasta",
		"dbsnp": "/srv/gs1/projects/scg/Resources/GATK/hg19-3.0/dbsnp_138.hg19.vcf",
		"GATK": "/srv/gs1/software/gatk/gatk-3.0/GenomeAnalysisTK-3.0-0/",
		"PICARD": "/srv/gs1/software/picard-tools/1.111",
		"ACMG_Genes": "/srv/gsfs0/projects/gbsc/Clinical_Service/dbases/ACMG/ACMG_genes.bed",
		"rModule": "r",
		"javaModule": "java/latest"
	},

	"qsub": {
		"-M": "nathankw@stanford.edu",
		"-m": "ba",
		"-A": "clinical-services",
		"-R": "y"
	},
	
	"analyses": {

		"fastqc": {
			"program": "fastqc",
			"enable": 1,
			"modules": ["fastqc/0.10.1"],
			"inputFormat": "bam",
			"inputArg": "null",

			"qsub": {
				"name": "FastQC",
				"slots": 5,
				"mem": "1G"
			},
		
			"params": {
				"--threads": 5,
				"--outdir": "${outdir}"
			},
		
			"args": ["${bam}"]
		},

		"DepthOfCoverage": {
			"enable": 1,
			"modules": ["${javaModule}"],
			"jar": "${GATK}/GenomeAnalysisTK.jar",
			"javavm": "-Xmx5G",
			"inputFormat": "bam",
			"inputArg": "-I",

			"qsub": {
				"name": "DepthOfCoverage",
				"slots": 1,
				"mem": "12G"
			},

			"params": {
				"-T": "DepthOfCoverage",
		    "-L": "${ACMG_Genes}",
				"-R": "${reference}",
				"-I": "${bam}",
				"-o": "coverage_hist.txt"
			}
		},

		"Concordance": {
			"enable": 1,
			"modules": ["${javaModule}"],
			"jar": "${GATK}/GenomeAnalysisTK.jar",
			"javavm": "-Xmx2G",
			"inputFormat": "vcf",
			"inputArg": "--variant",
			"outputArg": "-o",

			"qsub": {
				"name": "SelectVariants_concordance",
				"slots": 8,
				"mem": "2G"
			},

			"params": {
				"-T": "SelectVariants",
		    "-L": "${ACMG_Genes}",
				"-nt": 10,
				"--variant": "${vcf}",
				"--concordance": "${dbsnp}",
				"-R": "${reference}",
				"-o": "concordance.vcf"
			}
		},

		"Discordance": {
			"enable": 1,
			"modules": ["${javaModule}"],
			"jar": "${GATK}/GenomeAnalysisTK.jar",
			"javavm": "-Xmx2G",
			"inputFormat": "vcf",
			"inputArg": "--variant",
			"outputArg": "-o",

			"qsub": {
				"name": "SelectVariants_discordance",
				"slots": 8,
				"mem": "2G"
			},

			"params": {
				"-T": "SelectVariants",
		    "-L": "${ACMG_Genes}",
				"-nt" : 8,
				"--variant": "${vcf}",
				"--discordance": "${dbsnp}",
				"-R": "${reference}",
				"-o": "discordance.vcf"
			}
		},

		"VariantEval": {
			"enable": 1,
			"modules": ["${javaModule}"],
			"jar": "${GATK}/GenomeAnalysisTK.jar",
			"javavm": "-Xmx2G",
			"inputFormat": "vcf",

			"qsub": {
				"name": "VariantEval",
				"slots": 1,
				"mem": "6G"
			},

			"params": {
				"-nt": 8,
				"-T": "VariantEval",
		    "-L": "${ACMG_Genes}",
				"-R": "${reference}",
				"--eval:set1,vcf": "${vcf}",
				"-o": "variantEval_metrics.txt",
				"-noEV": "",
				"-EV CountVariants -EV TiTvVariantEvaluator": "",
				"-noST": "",
				"-ST": "VariantType",
				"--dbsnp": "${dbsnp}"
			}
		},

		"GenotypeConcordance": {
			"enable": 1,
			"modules": ["${javaModule}"],
			"jar": "${GATK}/GenomeAnalysisTK.jar",
			"javavm": "-Xmx2G",
			"inputFormat": "vcf",

			"qsub": {
				"name": "GenotypeConcordance",
				"slots": 1,
				"mem": "6G"
			},

			"params": {
				"-T": "GenotypeConcordance",
				"-R": "${reference}",
				"--eval:set1,vcf": "${vcf}",
				"-o": "genotypeConcordance.txt",
				"--comp": "${dbsnp}"
			}
		},


		"CollectAlignmentSummaryMetrics": {
			"enable": 0,
			"modules": ["${javaModule}"],
			"jar": "${PICARD}/CollectAlignmentSummaryMetrics.jar",
			"javavm": "-Xmx4G",
			"inputFormat": "bam",
			
			"qsub": {
				"name": "CollectAlignmentSummaryMetrics",
				"slots": 1,
				"mem": "8G"
			},
		
			"params": {
				"ASSUME_SORTED=": "true",
				"INPUT=": "${bam}",
				"OUTPUT=": "alnSummaryMetrics.txt",
				"REFERENCE_SEQUENCE=": "${reference}",
				"METRIC_ACCUMULATION_LEVEL=": "ALL_READS"
			}
		},

		"CollectGcBiasMetrics": {
			"enable": 0,
			"modules": ["${javaModule}","${rModule}"],
			"jar": "${PICARD}/CollectGcBiasMetrics.jar",
			"javavm": "-Xmx4G",
			"inputFormat": "bam",
			
			"qsub": {
				"name": "CollectGcBiasMetrics",
				"slots": 1,
				"mem": "8G"
			},
		
			"params": {
				"ASSUME_SORTED=": "true",
				"INPUT=": "${bam}",
				"OUTPUT=": "gcBiasMetrics.txt",
				"REFERENCE_SEQUENCE=": "${reference}",
				"SUMMARY_OUTPUT=": "gcBiasMetrics_summary.txt",
				"CHART_OUTPUT=": "gcBiasMetrics_chart.pdf"
			}
		},

		"CollectInsertSizeMetrics": {
			"enable": 0,
			"modules": ["${javaModule}","${rModule}"],
			"jar": "${PICARD}/CollectInsertSizeMetrics.jar",
			"javavm": "-Xmx2G",
			"inputFormat": "bam",
			
			"qsub": {
				"name": "CollectInsertSizeMetrics",
				"slots": 1,
				"mem": "5G"
			},
	
			"params": {
				"ASSUME_SORTED=": "true",
				"INPUT=": "${bam}",
				"OUTPUT=": "insertSizeMetrics.txt",
				"REFERENCE_SEQUENCE=": "${reference}",
				"METRIC_ACCUMULATION_LEVEL=": "ALL_READS",
				"HISTOGRAM_FILE=": "insertSizeHist.pdf"
			}
		},

		"MeanQualityByCycle": {
			"enable": 0,
			"modules": ["${javaModule}","${rModule}"],
			"jar": "${PICARD}/MeanQualityByCycle.jar",
			"javavm": "-Xmx2G",
			"inputFormat": "bam",
			
			"qsub": {
				"name": "MeanQualityByCycle",
				"slots": 1,
				"mem": "5G"
			},
	
			"params": {
				"ASSUME_SORTED=": "true",
				"INPUT=": "${bam}",
				"OUTPUT=": "meanQualitybyCycle.txt",
				"REFERENCE_SEQUENCE=": "${reference}",
				"ALIGNED_READS_ONLY=": "true",
				"PF_READS_ONLY=": "true",
				"CHART_OUTPUT=": "meanQualityByCycle.pdf"
			}
		},


		"QualityScoreDistribution": {
			"enable": 0,
			"modules": ["${javaModule}","${rModule}"],
			"jar": "${PICARD}/QualityScoreDistribution.jar",
			"javavm": "-Xmx2G",
			"inputFormat": "bam",
			
			"qsub": {
				"name": "QualityScoreDistribution",
				"slots": 1,
				"mem": "5G"
			},
	
			"params": {
				"ASSUME_SORTED=": "true",
				"INPUT=": "${bam}",
				"OUTPUT=": "qualityScoreDistribution.txt",
				"REFERENCE_SEQUENCE=": "${reference}",
				"ALIGNED_READS_ONLY=": "true",
				"PF_READS_ONLY=": "true",
				"CHART_OUTPUT=": "qualityScoreDistribution.pdf"
			}
		}
	}
}
