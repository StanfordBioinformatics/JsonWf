{ 
	"version": "2.0.0",
	"resources": {
		"reference": "/srv/gs1/projects/scg/Genomes/H_sapiens/hg19_female/BWA_0.7.10/hg19_female.fa",
		"bwaModule": "bwa/0.7.10",
		"PICARD": "/srv/gs1/software/picard-tools/1.111",
		"samtoolsModule": "samtools/0.1.19",
		"javaModule": "java/latest",

		"qsub": {
				"-M": "nathankw@stanford.edu",
				"-m": "a",
				"-A": "seq_center",
				"-R": "y"
		}
	},
	
	"analyses": [
		{
			"analysis": "bwa_mem",
			"program": "bwa mem",
			"enable": 1,
			"modules": ["${bwaModule}"],
			"inputFormat": "fastq",

			"outfiles": [
				{"bwa_mem_out": "$samfile"}
			],

			"qsub": {
				"mem": "4G",
				"slots": 6
			},
		
			"params": {
				"-t": 6
			},
		
			"args": ["$reference","$r1","$r2",">","$bwa_mem_out"]
		},

		{
    	"analysis": "sam2Bam",
			"program": "samtools view",
      "enable": 1,
      "modules": ["${samtoolsModule}"],
      "inputFormat": "sam",

			"outfiles": [
				{"sam2Bam_out": "${samfile%.*}.bam"}
			],

			"dependencies": ["bwa_mem"],
    
      "qsub": {
        "slots": 1,
        "mem": "4G"
      },  
    
      "params": {
				"-Shb": ""
			},

			"args": ["$samfile",">","$sam2Bam_out"]
		},

		{
			"analysis": "cleanBam",
			"enable": 1,
			"modules": ["${javaModule}"],
			"jar": "${PICARD}/CleanSam.jar",
			"javavm": "-Xmx6G",
			"inputFormat": "bam",

			"outfiles": [
				{"cleanBam_out": "${sam2Bam_out%.*}.clean.bam"}
			],

			"dependencies": ["sam2Bam"],

			"qsub": {
				"name": "cleanBam",
				"slots": 1,
				"mem": "10G"
			},

			"params": {
				"INPUT=": "$sam2Bam_out",
				"OUTPUT=": "$cleanBam_out"
			}
		},
		
		{
    	"analysis": "sortBam",
      "enable": 1,
      "modules": ["$javaModule"],
      "jar": "${PICARD}/SortSam.jar",
      "javavm": "-Xmx4G",
      "inputFormat": "bam",

			"outfiles": [
				{"sortBam_out": "${cleanBam_out%.*}.coordSorted.bam"}
			],

			"dependencies": ["cleanBam"],
  
      "qsub": {
        "name": "sortBam",
        "slots": 1,
        "mem": "16G"
      },  
  
      "params": {
        "INPUT=": "$cleanBam_out",
				"OUTPUT=": "$sortBam_out",
				"SORT_ORDER=": "coordinate"
      }
		},

		{
    	"analysis": "BuildBamIndex",
      "enable": 1,
      "modules": ["$javaModule"],
      "jar": "${PICARD}/BuildBamIndex.jar",
      "javavm": "-Xmx6G",
      "inputFormat": "bam",

			"outfiles": [
				{"BuildBamIndex_out": "${sortBam_out%.*}.bai"}
			],

			"dependencies": ["sortBam"],
  
      "qsub": {
        "name": "BuildBamIndex",
        "slots": 1,
        "mem": "10G"
      },  
  
      "params": {
        "INPUT=": "$sortBam_out",
				"OUTPUT=": "$BuildBamIndex_out"
      }  
		}
	]
}
